<div class="card mb-4">
  <img class="card-img-top" src="{{imageUrl}}" alt="{{title}}" width="400" />
  <div class="card-body">
    <h4 class="card-title">{{title}}</h4>
  </div>
  <div class="card-footer">
    <a href="/courses/{{_id}}/details"><button
        type="button"
        class="btn btn-primary"
      >Details</button></a>
    <small class="float-right">{{duration}}</small>
  </div>
</div>