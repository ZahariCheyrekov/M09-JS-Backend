<div class="container">
  <section class="details">
    <h1>Theater title: {{title}} by {{author}}</h1>
    <div>
      <img src="{{imageUrl}}" />
    </div>
  </section>

  <section class="details">
    <h3>Theater Description</h3>
    <p>{{description}}</p>
    <div class="buttons">
      {{#if isOwner}}
        <a class="btn delete" href="/theaters/{{_id}}/delete">Delete</a>
        <a class="btn edit" href="/theaters/{{_id}}/edit">Edit</a>
      {{else if user}}
        {{#if isLiked}}
          <span class="liked">You have already liked this play!</span>
        {{else}}
          <a class="btn like" href="/theaters/{{_id}}/like">Like</a>
        {{/if}}
      {{/if}}
    </div>
  </section>
</div>