<section id="catalog-section">
  <h1 class="item">
    {{title}}
    {{#if isOwner}}
      <div class="f-right">
        <a class="action pad-small f-left" href="#">Edit</a>
        <a class="action pad-small f-left" href="#">Delete</a>
      </div>
    {{/if}}
  </h1>
  <div class="item padded">
    <div class="layout right large">
      <div class="col">
        <img src="{{imageUrl}}" class="img-large" />
      </div>
      <div class="content pad-med">

        <p>In category: <strong>{{category}}</strong></p>
        <p>{{description}}</p>

        <div class="align-center">
          <div>
            Current price: $<strong>{{price}}</strong>
          </div>

          {{#if isOwner}}
            <div>
              {{#if bidder}}
                Bid by
                <strong>John Maclane</strong>
                <!-- # Bonus: If there is a bidder -->
                <!--<a class="action pad-med cta" href="#">Close Auction</a>-->
              {{else}}
                No bids
              {{/if}}
            </div>
          {{else}}
            {{#if placedByUser}}
              <div>
                You are currently the
                <strong>highest bidder</strong>
                for this auction
              </div>
            {{else}}
              <form class="vertical" method="POST">
                <label><span>Bid amount</span><input
                    type="number"
                    name="number"
                  /></label>
                <input class="action" type="submit" value="Place bid" />
              </form>
            {{/if}}
          {{/if}}

        </div>
      </div>
    </div>
    <footer>Listed by {{publisherName}}</footer>
  </div>
</section>