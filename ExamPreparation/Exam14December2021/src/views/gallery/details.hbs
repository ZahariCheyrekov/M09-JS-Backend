<section id="details-page">
  <h1>Details</h1>
  <article class="details-card">

    <article class="details-card-text">
      <h2>Title:<br /> {{title}}</h2>
      <h3>Author: {{authorName}}</h3>
      <h3>Painting technique: {{paintingTechnique}}</h3>
      <h3>Certificate of authenticity: {{certificateOfAuthenticity}}</h3>

      {{#if user}}
        <div class="buttons">
          {{#if isOwner}}
            <a href="/gallery/{{_id}}/edit" class="btn-edit">Edit</a>
            <a href="/gallery/{{_id}}/delete" class="btn-delete">Delete</a>
          {{else if user}}
            {{#if isShared}}
              <p class="shared-pub">You already shared this publication</p>
            {{else}}
              <a href="/gallery/{{_id}}/share" class="btn-share">Share
                publication</a>
            {{/if}}
          {{/if}}
        </div>
      {{/if}}
    </article>

    <article class="details-card-image">
      <img src="{{artPicture}}" alt="art-image2" />
    </article>
  </article>
</section>