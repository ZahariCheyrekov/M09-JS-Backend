<section id="viewhotelDetails">
  <div class="profile"><img
      src="/static/img/profile.png"
      alt="{{user.username}}"
    />
    <h3>User Info:</h3>
    <div class="flex">
      <p>Username: </p>
      <p>{{user.username}}</p>
    </div>
    <div class="flex">
      <p>Email: </p>
      <p>{{user.email}}</p>
    </div>
    <div class="flex">
      <p>Reservations: </p>
      {{#if reservations}}
        <p>
          {{#each reservations}}
            <span>{{name}}, </span>
          {{/each}}
        </p>
      {{else}}
        <p>No reservations.</p>
      {{/if}}
    </div>
  </div>
</section>